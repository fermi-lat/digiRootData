 ../digiRootData/TkrDigi.h\
 ../digiRootData/TowerId.h\
 ../digiRootData/EventLinkDef.h"

macro root_linkdef "../digiRootData/EventLinkDef.h"
macro root_includes "-I${MCROOTDATAROOT}"

apply_pattern root_package

macro digiRootData_shlibflags " " \
      VisualC            " ${use_linkopts} "


library  digiRootData \
      DigiEvent.cxx \
      TkrDigi.cxx TowerId.cxx \
      CalDigi.cxx CalXtalReadout.cxx CalXtalId.cxx \
      AcdDigi.cxx AcdId.cxx \
